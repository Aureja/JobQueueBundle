<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="aureja_job_queue.form.job_configuration" class="Symfony\Component\Form\Form">
            <factory service="form.factory" method="createNamed"/>

            <argument>aureja_job_configuration_form</argument>
            <argument>aureja_job_configuration</argument>
        </service>

        <service id="aureja_job_queue.form.job_pre_configuration" class="Symfony\Component\Form\Form">
            <factory service="form.factory" method="createNamed"/>

            <argument>aureja_job_pre_configuration_form</argument>
            <argument>aureja_job_pre_configuration</argument>
        </service>

    </services>

</container>
